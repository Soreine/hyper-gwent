{
  "manifest_version": 2,
  "author": "Soreine & Zhouzi",
  "homepage_url": "https://soreine.github.io/hyper-gwent",
  "name": "Hyper Gwent",
  "description": "Show tooltips for cards in pages containing Gwentâ“‡ related content.",
  "version": "1.1.0",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "40": "icon40.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["storage", "activeTab", "tabs"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_idle",
      "all_frames": true,
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "40": "icon40.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "web_accessible_resources": ["*.png", "*.woff2"]
}

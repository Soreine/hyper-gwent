{
  "manifest_version": 2,
  "author": "Soreine & Zhouzi",
  "homepage_url": "https://soreine.github.io/hyper-gwent",
  "name": "Hyper Gwent",
  "description": "Show tooltips for cards in pages containing Gwentâ“‡ related content.",
  "version": "1.0.5",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.reddit.com/r/gwent/*",
        "https://www.reddit.com/r/Competitive_Gwent/*",
        "http://www.gwentdb.com/decks/*",
        "http://www.gwentdb.com/forums/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}

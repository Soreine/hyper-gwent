{
  "private": true,
  "scripts": {
    "test": "ava",
    "test:watch": "npm test -- --watch",
    "lint": "eslint .",
    "dictionary": "node ./scripts/buildDictionary.js",
    "prebuild": "rm -rf dist",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "webpack && cp icon*.png src/extension/options.html dist/chrome/ && node --harmony_trailing_commas scripts/buildChrome.js",
    "build:firefox": "mkdir -p dist/firefox && cp dist/chrome/** dist/firefox/ && node --harmony_trailing_commas scripts/buildFirefox.js",
    "build:website": "webpack --config webpack.config.website.js",
    "predeploy": "npm run build:website && npm run dictionary",
    "deploy": "gh-pages -d dist/website",
    "prepack": "npm run build",
    "pack": "bestzip chrome.zip dist/chrome/** && bestzip firefox.zip dist/firefox/**"
  },
  "ava": {
    "babel": "inherit"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "jsx-dom": "^6.2.1",
    "pluralize": "^6.0.0",
    "remove-accents": "^0.4.1",
    "seamless-immutable": "^7.1.2",
    "url-parse": "^1.1.9",
    "webextension-polyfill": "^0.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "ava": "^0.25.0",
    "bestzip": "^1.1.4",
    "css-loader": "^0.28.0",
    "eslint": "^5.9.0",
    "eslint-config-gitbook": "^4.0.1",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^0.11.2",
    "gh-pages": "^1.0.0",
    "gwent-api-client": "^3.0.0",
    "isomorphic-fetch": "^2.2.1",
    "object-hash": "^1.2.0",
    "ora": "^1.3.0",
    "path-exists": "^3.0.0",
    "prettier": "^1.15.2",
    "rollup": "^0.67.1",
    "rollup-plugin-babel": "^4.0.3",
    "style-loader": "^0.16.1",
    "svg-inline-loader": "^0.8.0"
  }
}

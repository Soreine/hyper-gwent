{
  "private": true,
  "scripts": {
    "test": "ava",
    "test:watch": "npm test -- --watch",
    "lint": "eslint .",
    "dictionary": "node --harmony_trailing_commas ./src/core/scripts/build_dictionary.js",
    "prebuild": "rm -rf dist",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "webpack && cp icon*.png src/extension/options.html dist/chrome/ && node --harmony_trailing_commas scripts/buildChrome.js",
    "build:firefox": "mkdir -p dist/firefox && cp dist/chrome/** dist/firefox/ && node --harmony_trailing_commas scripts/buildFirefox.js",
    "build:website": "webpack --config webpack.config.website.js",
    "predeploy": "npm run build:website",
    "deploy": "gh-pages -d dist/website",
    "prepack": "npm run build",
    "pack": "bestzip chrome.zip dist/chrome/** && bestzip firefox.zip dist/firefox/**"
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "dependencies": {
    "jsx-dom": "^5.1.2",
    "pluralize": "^6.0.0",
    "remove-accents": "^0.4.1",
    "seamless-immutable": "^7.1.2",
    "url-parse": "^1.1.9",
    "webextension-polyfill": "^0.1.1"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-strict-mode": "^6.24.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.0",
    "bestzip": "^1.1.4",
    "css-loader": "^0.28.0",
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-plugin-import": "^2.2.0",
    "file-exists": "^4.0.0",
    "file-loader": "^0.11.2",
    "gh-pages": "^1.0.0",
    "gwent-api-client": "^1.1.0",
    "html-webpack-plugin": "^2.29.0",
    "style-loader": "^0.16.1",
    "svg-inline-loader": "^0.8.0",
    "webpack": "^3.0.0"
  }
}
